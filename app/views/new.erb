<div id="host-new-form" class="page-container">

  <div class="l-wrapper">
    <div id="nav-buttons" class="center-nav">
      <div id="host-button" class="button"><a href="/new"><h3>Become host</h3></a></div>
      <div class="button"><h3>Sign Up</h3></div>
      <div class="button"><h3>Log In</h3></div>
      <div id="logo-button" class="button"><a href="/"><h3>HotDog</h3></a></div>
    </div>    

    <div class="body-content">
      <h2>Become a host (today!)</h2>
      <div id="become-host-form" class="row form-center">
        <form method="post" action="/users" class="form-horizontal">
          <div class="form-group row">
            <label class="col-sm-4 control-label">Name:</label>
            <div class="col-sm-8">
              <input type="text" name="name" placeholder="name" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Email: **</label>
            <div class="col-sm-8">
              <input type="text" name="email" placeholder="host@example.com" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Phone number: **</label>
            <div class="col-sm-4">
              <input type="text" name="phone_number" placeholder="+1 604 - XXX - XXXX" class="form-control">
            </div>
            <div class="col-sm-4">
              <small>* You will receive text message with dog owners requests.</small>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Street Address: **</label>
            <div class="col-sm-8">
              <input type="text" name="address" placeholder="1234 Street" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">City: **</label>
            <div class="col-sm-8">
              <input type="text" name="city" placeholder="Vancouver" class="form-control">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-4 control-label">Postal Code: **</label>
            <div class="col-sm-8">
              <input type="text" name="zipcode" placeholder="V6X X1X" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Country: **</label>
            <div class="col-sm-8">
              <input type="text" name="country" placeholder="Canada" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Description:</label>
            <div class="col-sm-8">
              <textarea class="form-control" name="description"></textarea>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Username: **</label>
            <div class="col-sm-8">
              <input type="text" name="username" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-4 control-label">Password: **</label>
            <div class="col-sm-8">
              <input type="password" name="password" class="form-control">
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-8">
              <button class="btn btn-default input-lg button col-sm-12" type="submit"><h3>Submit</h3></button>
            </div>
          </div>            
        </form>
      </div>
    </div>
    <div id="footer">
      <small>inspired by Rowan.</small>
    </div>
  </div>
  
  <div class="r-wrapper">
    <img id="bg" src="/img/tall_dog.jpg">
  </div>
</div>